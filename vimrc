syntax on
set number
set hlsearch
set nrformats-=octal
set autoindent
set tabstop=4
set smarttab
set shiftwidth=4
set softtabstop=4
set expandtab
set nowrap
set list
set listchars=tab:>-,trail:-
set history=100
set fileencodings=ucs-bom,utf-8,cp936
set diffopt+=vertical
set splitright
set splitbelow

execute pathogen#infect()
syntax on
filetype plugin indent on
